{
    "compilerOptions": {
        "composite": false,
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "inlineSources": false,
        "isolatedModules": true,
        "moduleResolution": "node",
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "preserveWatchOutput": true,
        "skipLibCheck": true,
        "strict": true,
        "jsx": "react-jsx",
        "lib": ["esnext", "DOM"],
        "module": "ESNext",
        "target": "es6",
        "paths": {
            "movement-hooks/core": ["./core/src/index.ts"]
        }
    }
}